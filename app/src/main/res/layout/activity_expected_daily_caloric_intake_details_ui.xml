<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECEC"
    tools:context=".ExpectedDailyCaloricIntakeUI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelExpectedDailyCaloricIntakeScreen"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Enter Expected Daily Caloric Intake"
            android:textColor="#4791FF"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Expected Minimum Value"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/expectedMinimumValueID"
                    android:layout_width="350dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textAlignment="viewStart"
                    android:textColor="#575353"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Expected Maximum Value"
                android:layout_marginBottom="16dp">
                <EditText
                    android:id="@+id/expectedMaximumValueID"
                    android:layout_width="350dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:background="@android:color/white"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textAlignment="viewStart"
                    android:textColor="#575353"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <Button
                android:id="@+id/saveButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4791FF"
                android:text="Save"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cancelButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4791FF"
                android:text="Cancel"
                android:textSize="14sp" />

            <Button
                android:id="@+id/returnToMenuButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="#4791FF"
                android:text="Return to Menu"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

