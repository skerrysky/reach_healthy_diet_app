<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECEC"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center"
            android:text="Healthy Diet"
            android:textAlignment="center"
            android:textColor="#4791FF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainMenuID"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Main Menu"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/expectedDailyCaloricIntakeID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#4791FF"
                android:text="Expected Daily Caloric Intake"
                android:textSize="20sp"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/foodNutritionButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#4791FF"
                android:text="Food Nutrition Information"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/dailyMealPlansButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#4791FF"
                android:text="Daily Meal Plans"
                android:textSize="20sp"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/compareMealPlansButtonID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#4791FF"
                android:text="Compare Meal Plans"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
